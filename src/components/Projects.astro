---
import projects from "../../public/assets/data/projects.json";
---
<section>
    <div>
        <div class="flex justify-between">
            <h3>Projects</h3>
            <a>Contáctame</a>
        </div>
        <div class="grid grid-cols-2">
            {projects.map((project) => (
                <div>
                    <img src={project.urlImage}>
                    <h4>{project.title}</h4>
                    <p>{project.categories.join(', ')}</p>
                </div>
            ))}
        </div>
        <a href="">Ver más</a>
    </div>
</section>